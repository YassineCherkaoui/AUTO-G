<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="css/list.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="css/smoothproducts.css">
	<link rel="stylesheet" href="../css/smoothproducts.css">
  </head>
  <body>
	  <div >
		<a href="http://localhost:8080/" ><button style="background-color: #ffffff; /* Green */
			border: none;
			color: white;
			padding: 15px 32px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;">Logout</a></button>
	</div>
	<!-- Nav Bar -->	
	<div class="container mt-5">
		<h1 class="text-center">Client</h1>

	
		
		<table class="table mt-5">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Full Name</th>
					<th scope="col">Matricule</th>
					<th scope="col">Permis</th>
					<th scope="col">Date de Pirmis</th>
					<th scope="col">Ville</th>
					<th scope="col">Phone</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				<% data.forEach(d => { %>
					<tr>
						<th scope="row"><%= d.ID %></th>
						<td><%= d.name %></td>
						<td><%= d.Matricule %></td>
						<td><%= d.permis %></td>
						<td><%= d.DatePirmis %></td>
						<td><%= d.ville %></td>
						<td><%= d.Phone %></td>
						<td>
							<a href="/edit/<%= d.ID %>" style="color: white">
				                <button type="button" class="btn btn-success" style="background-color: rgba(9, 162, 255, 0.85);">
								Edit
                </button>
              </a>
							<a href="/delete/<%= d.ID %>" style="color: white" onclick="return confirm('êtes-vous sûr ?')">
                <button type="button" class="btn btn-danger">
                  Delete
                </button>
			  </a>
						</td>
						
					</tr>
				<% }) %>
			</tbody>
		</table>
		<a href="/add" class="btn btn-primary" style="background-color: rgba(9, 162, 255, 0.85);">Add</a>
	</div>

	 


</script>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
